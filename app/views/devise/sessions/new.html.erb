<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'pure-form pure-form-stacked'}) do |f| %>
  <div class="field pure-control-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field pure-control-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me , class: 'pure-checkbox'%>
    </div>
  <% end -%>

  <div class="actions pure-controls">
    <%= f.submit "Log in", class: 'pure-button pure-button-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
